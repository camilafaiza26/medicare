<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beritacovid.Detail_Berita_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAc_Berita"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="200dp"

            android:gravity="center"
            android:text="Berita Covid-19"
            android:textColor="@color/black1"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backButtonBR"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/backButtonBR"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/trans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_outline_arrow_back_ios_18"
            app:tint="@color/black1"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/txt_judul_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black1"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAc_Berita"
            tools:text="58 Kasus Kematian Akibat Covid" />
        <TextView
            android:id="@+id/txt_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            tools:text="2 days ago"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14dp"
            android:textColor="@color/black1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_judul_berita" />
        <TextView
            android:id="@+id/txt_data_sumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppinsregular"
            tools:text="CNN Indonesia"
            android:textColor="@color/black1"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/txt_waktu"
            app:layout_constraintTop_toBottomOf="@id/txt_judul_berita"/>
        " />

        <ImageView
            android:id="@+id/img_foto_berita"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_data_sumber"
            tools:srcCompat="@drawable/berita1" />
        <TextView
            android:id="@+id/txt_data_description_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/poppinsmedium"

            android:textColor="@color/black1"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_foto_berita"
            app:layout_constraintTop_toBottomOf="@id/img_foto_berita" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>