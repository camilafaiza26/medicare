<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="@color/white">


    <EditText
        android:id="@+id/kode_prov"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginEnd="42dp"
        android:padding="8dp"
        android:text="Kode Prov" />

    <EditText
        android:id="@+id/prov"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kode_prov"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="42dp"
        android:padding="8dp"
        android:text="Provinsi" />

    <EditText
        android:id="@+id/positif"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prov"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="42dp"
        android:padding="8dp"
        android:text="Kasus Positif" />

    <EditText
        android:id="@+id/negatif"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/positif"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="42dp"
        android:padding="8dp"
        android:text="Kasus Negatif" />

    <EditText
        android:id="@+id/meninggal"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/negatif"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="42dp"
        android:padding="8dp"
        android:text="Kasus Meninggal" />

    <TextView
        android:id="@+id/kprov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/kode_prov"
        android:text="Kode Provinsi" />

    <TextView
        android:id="@+id/provinsi"
        android:layout_width="59dp"
        android:layout_height="34dp"
        android:layout_below="@+id/kprov"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/prov"
        android:text="Provinsi" />

    <TextView
        android:id="@+id/pos"
        android:layout_width="59dp"
        android:layout_height="34dp"
        android:layout_below="@+id/provinsi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/positif"
        android:text="Positif" />

    <TextView
        android:id="@+id/neg"
        android:layout_width="59dp"
        android:layout_height="34dp"
        android:layout_below="@+id/pos"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@+id/negatif"
        android:text="Negatif" />

    <TextView
        android:id="@+id/mng"
        android:layout_width="59dp"
        android:layout_height="34dp"
        android:layout_below="@+id/neg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/meninggal"
        android:text="Meninggal" />

</RelativeLayout>