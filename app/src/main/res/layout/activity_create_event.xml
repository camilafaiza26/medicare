<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CreateEvent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="369dp"
            android:layout_below="@+id/analogClock"
            android:layout_marginTop="-237dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backdrop3" />

        <ImageButton
            android:id="@+id/backButton4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:background="@color/trans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_outline_arrow_back_ios_18"
            app:tint="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/jadwalobat2"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="200dp"
            android:layout_toEndOf="@+id/backButton4"
            android:fontFamily="@font/poppinssemibold"
            android:text="@string/jadwalobat2"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backButton4"
            app:layout_constraintTop_toTopOf="parent" />

        <AnalogClock

            android:id="@+id/analogClock"
            android:layout_width="107dp"
            android:layout_height="104dp"
            android:layout_below="@+id/jadwalobat2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jadwalobat2" />

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_record"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="158dp"
            android:src="@drawable/ic_mic_black_48dp" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/analogClock"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="Record Me To"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <EditText
        android:id="@+id/editext_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Nama Obat"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editext_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Jumlah Obat"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editext_message3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:hint="Keterangan"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        android:text="Select Time"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:text="Select date"
        android:textAllCaps="false"

        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:id="@+id/btn_date"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/purple_500"
        android:text="Done"
        android:textColor="@color/white" />
</LinearLayout>